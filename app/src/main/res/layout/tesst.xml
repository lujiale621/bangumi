<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/readlinelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/bgcolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.lc.bangumidemo.Myreadview.ScanView
        android:id="@+id/pageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:background="#B3000000"
        android:id="@+id/leftmenu"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="#00ACC1"
            android:background="#CC000000"/>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fleshbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#28000000"
                android:textColor="#00ACC1"
                android:text="刷新" />

            <Button
                android:id="@+id/dore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#28000000"
                android:textColor="#00ACC1"
                android:text="倒序" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/readtoolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/pageview"
        android:background="#BF000000" />

    <LinearLayout
        android:id="@+id/buttonmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pageview"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/seakbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BF000000"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上一章"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:textColor="#B5FFFFFF"  />

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="100"
                android:progress="0"

                />

            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下一章"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:textColor="#B5FFFFFF" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/setmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BF000000"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addfontsize"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:drawableTop="@mipmap/apuls"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/cutfontsize"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:drawableTop="@mipmap/acut"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/addlinesize"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:drawableTop="@mipmap/addline"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/cutlinesize"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:drawableTop="@mipmap/cutline"
                android:textColor="#FFFFFF"

                />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/setliangdu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BF000000"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/colwrite"
                    android:layout_gravity="center"
                    app:cardCornerRadius="50dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground = "?attr/selectableItemBackground"
                    >
                    <ImageView
                        android:src="#FFFFFF"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/colbule"
                    android:layout_gravity="center"
                    app:cardCornerRadius="50dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground = "?attr/selectableItemBackground"
                    >
                    <ImageView
                        android:src="#A7FFEB"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/colgreen"
                    android:layout_gravity="center"
                    app:cardCornerRadius="50dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground = "?attr/selectableItemBackground"
                    >
                    <ImageView
                        android:src="#B9F6CA"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/colgreen-2"
                    android:layout_gravity="center"
                    app:cardCornerRadius="50dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground = "?attr/selectableItemBackground"
                    >
                    <ImageView
                        android:src="#CCFF90"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/colyellew"
                    android:layout_gravity="center"
                    app:cardCornerRadius="50dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground = "?attr/selectableItemBackground"
                    >
                    <ImageView
                        android:src="#F4FF81"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="9"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                >
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="自定义"
                    android:textSize="20dp"
                    android:textColor="#FF80AB"
                    />
            </LinearLayout>
        </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BF000000"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mulu"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:text="目录"
                android:drawableTop="@mipmap/mulu"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/huanyuan"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:text="换源"
                android:drawableTop="@mipmap/atm"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/liangdu"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:text="亮度"
                android:drawableTop="@mipmap/daytimemode"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/shezhi"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:text="设置"
                android:drawableTop="@mipmap/set"
                android:textColor="#FFFFFF"

                />
        </LinearLayout>

    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:indicatorColor="#80D8FF"
        app:indicatorName="BallScaleMultipleIndicator"
        android:id="@+id/avi"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="left"
            android:layout_weight="1"
            android:id="@+id/pagetitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#777272"
            />
        <TextView
            android:layout_weight="1"
            android:gravity="right"
            android:id="@+id/pagesize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#777272"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_alignBottom="@+id/pageview"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="right"
            android:id="@+id/pace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:textColor="#777272"
            />
    </LinearLayout>


</RelativeLayout>