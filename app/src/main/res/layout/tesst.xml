<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:id="@+id/readlinelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/bgcolor"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.lc.bangumidemo.Myreadview.ScanView
        android:id="@+id/pageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:background="#B3000000"
        android:id="@+id/leftmenu"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="#00ACC1"
            android:background="#CC000000"/>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fleshbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#28000000"
                android:textColor="#00ACC1"
                android:text="刷新" />

            <Button
                android:id="@+id/dore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#28000000"
                android:textColor="#00ACC1"
                android:text="倒序" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/readtoolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/pageview"
        android:background="#BF000000" />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="right|center"
        android:layout_centerInParent="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        >

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menufloat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:menu_animationDelayPerItem="50"
            fab:menu_backgroundColor="@android:color/transparent"
            fab:menu_buttonSpacing="0dp"
            fab:menu_colorNormal="#80DEEA"
            fab:menu_colorPressed="#80CBC4"
            fab:menu_colorRipple="#99FFFFFF"
            fab:menu_fab_hide_animation="@anim/my_hide_animation"
            fab:menu_fab_label="your_label_here"
            fab:menu_fab_show_animation="@anim/my_show_animation"
            fab:menu_fab_size="normal"
            fab:menu_icon="@drawable/fab_add"
            fab:menu_labels_colorNormal="#333333"
            fab:menu_labels_colorPressed="#444444"
            fab:menu_labels_colorRipple="#66FFFFFF"
            fab:menu_labels_cornerRadius="3dp"
            fab:menu_labels_ellipsize="none"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            fab:menu_labels_margin="0dp"
            fab:menu_labels_maxLines="-1"
            fab:menu_labels_padding="8dp"
            fab:menu_labels_paddingBottom="4dp"
            fab:menu_labels_paddingLeft="8dp"
            fab:menu_labels_paddingRight="8dp"
            fab:menu_labels_paddingTop="4dp"
            fab:menu_labels_position="left"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_showShadow="true"
            fab:menu_labels_singleLine="false"
            fab:menu_labels_style="@style/YourCustomLabelsStyle"
            fab:menu_labels_textColor="#FFFFFF"
            fab:menu_labels_textSize="14sp"
            fab:menu_openDirection="up"
            fab:menu_shadowColor="#66000000"
            fab:menu_shadowRadius="4dp"
            fab:menu_shadowXOffset="1dp"
            fab:menu_shadowYOffset="3dp"
            fab:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/menu_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hide"
                fab:fab_label="Menu item 1"
                fab:fab_size="mini"/>
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/menu_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bofang"
                fab:fab_label="Menu item 1"
                fab:fab_size="mini" />
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/menu_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zantingtingzhi"
                fab:fab_label="Menu item 1"
                fab:fab_size="mini" />

        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttonmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pageview"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            >

            <com.sackcentury.shinebuttonlib.ShineButton
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:id="@+id/collike"
                app:btn_color="@android:color/darker_gray"
                app:btn_fill_color="#f26d7d"
                app:siShape="@raw/heart"
                android:elevation="10dp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/huanyuanlayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#BF000000"
            >
            <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:visibility="visible"
                app:indicatorColor="#80D8FF"
                app:indicatorName="TriangleSkewSpinIndicator"
                android:id="@+id/anmoread"
                />
            <TextView
              android:layout_above="@+id/huanyuanlist"
                 android:gravity="center"
                android:id="@+id/sourcesize"
                android:textColor="#80DEEA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                />
           <ListView
               android:id="@+id/huanyuanlist"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/seakbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BF000000"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上一章"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:textColor="#B5FFFFFF"  />

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="100"
                android:progress="0"

                />

            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下一章"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:textColor="#B5FFFFFF" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/setmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BF000000"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addfontsize"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:drawableTop="@mipmap/apuls"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/cutfontsize"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:drawableTop="@mipmap/acut"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/addlinesize"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:drawableTop="@mipmap/addline"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/cutlinesize"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:drawableTop="@mipmap/cutline"
                android:textColor="#FFFFFF"

                />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/setliangdu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BF000000"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"/>
                    <ImageView
                        android:src="@drawable/liangdusmall"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"/>
                    <SeekBar
                        android:layout_weight="1"
                        android:id="@+id/liangduseekbar"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:max="255"
                        android:progress="0"
                        />
                    <ImageView
                        android:src="@drawable/liangdulag"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"/>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"/>
                    <RelativeLayout
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/yejian"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round"
                            >
                            <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="夜间"
                                android:textSize="20dp"
                                android:textColor="#FFFFFF"
                                />
                        </LinearLayout>



                    </RelativeLayout>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/colwrite"
                                android:layout_gravity="center"
                                app:cardCornerRadius="50dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:foreground = "?attr/selectableItemBackground"
                                >
                                <ImageView
                                    android:src="#FFFFFF"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/colpick"
                                android:layout_gravity="center"
                                app:cardCornerRadius="50dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:foreground = "?attr/selectableItemBackground"
                                >
                                <ImageView
                                    android:src="#FFCDD2"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/colgreen"
                                android:layout_gravity="center"
                                app:cardCornerRadius="50dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:foreground = "?attr/selectableItemBackground"
                                >
                                <ImageView
                                    android:src="#C8E6C9"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/colgreen-2"
                                android:layout_gravity="center"
                                app:cardCornerRadius="50dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:foreground = "?attr/selectableItemBackground"
                                >
                                <ImageView
                                    android:src="#DCEDC8"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/colyellew"
                                android:layout_gravity="center"
                                app:cardCornerRadius="50dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:foreground = "?attr/selectableItemBackground"
                                >
                                <ImageView
                                    android:src="#F0F4C3"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/custombackground"
                                android:layout_gravity="center"
                                app:cardCornerRadius="50dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:foreground = "?attr/selectableItemBackground"
                                >
                                <ImageView
                                    android:src="#B2EBF2"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"/>
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="我的"
                                    android:textSize="15dp"
                                    android:textColor="#FF80AB"
                                    />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_weight="9"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/selectbackground"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round"
                            >
                            <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="自定义"
                                android:textSize="20dp"
                                android:textColor="#FF80AB"
                                />
                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BF000000"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mulu"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:text="目录"
                android:drawableTop="@mipmap/mulu"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/huanyuan"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:text="换源"
                android:drawableTop="@mipmap/atm"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/liangdu"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:text="亮度"
                android:drawableTop="@mipmap/daytimemode"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/shezhi"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/delete_alarm_btn_drawable"
                android:text="设置"
                android:drawableTop="@mipmap/set"
                android:textColor="#FFFFFF"

                />
        </LinearLayout>

    </LinearLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:indicatorColor="#80D8FF"
        app:indicatorName="BallScaleMultipleIndicator"
        android:id="@+id/avi"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="left"
            android:layout_weight="1"
            android:id="@+id/pagetitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#777272"
            />
        <TextView
            android:layout_weight="1"
            android:gravity="right"
            android:id="@+id/pagesize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#777272"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_alignBottom="@+id/pageview"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="right"
            android:id="@+id/pace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:textColor="#777272"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/diag"
        android:background="#ffffff"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.ldoublem.loadingviewlib.view.LVGhost
            android:id="@+id/sghost"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="100dp"/>
        <com.ldoublem.loadingviewlib.LVLineWithText
            android:id="@+id/processlv"
            android:layout_below="@+id/sghost"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="150dp"/>
        <Button
            android:background="#00000000"
            android:id="@+id/quxiao"
            android:text="取消"
            android:textColor="#F48FB1"
            android:layout_below="@+id/processlv"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



</RelativeLayout>